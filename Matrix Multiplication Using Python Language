elif choice == "4":
print("MATRIX x MATRIX")
print()
print("1st matrix-")
R1 = int(input("Enter the number of rows: "))
C1 = int(input("Enter the number of columns: "))
print("Enter the entries in a single line (separated by space): ")
entries = list(map(int, input().split()))
matrix1 = np.array(entries).reshape(R1, C1)
print("Your matrix is: ")
print(matrix1)
print()
print("2nd matrix-")
R2 = int(input("Enter the number of rows: "))
C2 = int(input("Enter the number of columns: "))
print("Enter the entries in a single line (separated by space): ")
entries = list(map(int, input().split()))
matrix2 = np.array(entries).reshape(R2, C2)
print("Your matrix is: ")
print(matrix2)
print()
if C1 == R2:
print("The result is: ")
result = [[sum([matrix1[i][k] * matrix2[j][k] for k in
range(len(matrix2[0]))]) for j in
range(len(matrix2))] for i in range(len(matrix1))]
for row in result:
for number in row:
print(round(number, 2), end=" ")
print()
else:
print("ERROR: Matrix multiplication condition failed.")
